{
  "manifest_version": 2,
  "name": "Fallen London Goat Farmer",
  "description": "MMM, goaty!",
  "permissions": [
    "webRequest",
    "storage",
    "*://*.fallenlondon.com/"
  ],
  "version": "VERSION",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://fallenlondon.storynexus.com/Gap/Load*",
        "https://*.fallenlondon.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
